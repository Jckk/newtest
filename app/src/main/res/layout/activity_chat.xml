<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/chat_title"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageButton
                android:id="@+id/jmui_return_btn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:tint="@color/yunkacolor"
                android:src="@drawable/ic_global_nav_back"
                android:background="@color/white"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/jmui_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="190dp"
                    android:textColor="@color/yunkacolor_60"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="@string/app_name"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_bg"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_chat_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是客服发来的消息"
            android:layout_marginTop="50dp"
            android:textSize="17sp"/>
        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/rc_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_chat_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/imb_chat_voice"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/jmui_voice"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/edv_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="请输入内容"/>
            <Button
                android:id="@+id/btn_press_say"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pressed_say"
                android:textSize="16sp"
                android:visibility="gone"
                android:background="@drawable/chat_voice_bg"
                />
            <TextView
                android:id="@+id/editText_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:text="发送"
                android:background="@drawable/jmui_send_btn_bg"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
